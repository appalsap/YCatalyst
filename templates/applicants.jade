ol.applicants
  - applicants.forEach(function(applicant) {
    li
      div.applicant
        span.first_name #{applicant.first_name}
        text &nbsp;
        span.last_name #{applicant.last_name} 
        - if (applicant.created_at) {
          span.applied_at (applied #{applicant.created_at.time_ago()})
        - }
        br
        a(href: applicant.website).website #{applicant.website}
        br
        span.comment #{applicant.comment}
  - })

