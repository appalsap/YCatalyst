form(action: "/apply", method: "POST")
  input(type: "hidden", name: "referral_id", value: referral._id)
  input(type: "text", name: "first_name", data-default-text="first name", value: referral.first_name)
  br
  input(type: "text", name: "last_name", data-default-text="last name", value: referral.last_name)
  br
  input(type: "text", name: "email", data-default-text="email", value: referral.email)
  br
  input(type: "submit", name: "apply")

